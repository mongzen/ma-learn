# Database Configuration
DATABASE_URI=mongodb://mongo:27017/malearn
MONGODB_URL=mongodb://mongo:27017/malearn

# Payload Configuration
PAYLOAD_SECRET=your-secret-key-here-change-this-in-production
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Next.js Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# E-Learning Platform Configuration
NEXT_PUBLIC_PLATFORM_NAME=MaLearn
NEXT_PUBLIC_PLATFORM_DESCRIPTION=Open E-Learning Platform for Course Creation and Sales

# Payment Configuration
# Stripe for Fiat Currency
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cryptocurrency Payment (example: Web3 configuration)
NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=true
NEXT_PUBLIC_SUPPORTED_CHAINS=ethereum,polygon,bsc

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_NAME=MaLearn Platform
FROM_EMAIL=noreply@malearn.com

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://redis:6379

# Development/Production Environment
NODE_ENV=development
PORT=3000

# Security
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE
